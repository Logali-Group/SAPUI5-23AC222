<mvc:View controllerName="employees.controller.App" 
            xmlns="sap.m"
            xmlns:core="sap.ui.core"
            xmlns:mvc="sap.ui.core.mvc" 
            displayBlock="true" >

    <Shell>
        <App>
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <HBox>
                            <Label id="labelEmployee" 
                                    class="sapUiSmallMargin" 
                                    text="{i18n>labelEmployee}" />
                            <Input id="inputEmployee" 
                                    class="sapUiSmallMarginEnd" 
                                    maxLength="6" 
                                    value="{jsonCountries>/EmployeeId}"
                                    width="200px"/>
                            <Label id="labelCountry"
                                    class="sapUiSmallMargin" 
                                    text="{i18n>labelCountry}"/>
                            <Select id="selectCountry"
                                    items="{jsonCountries>/ListCountry}"
                                    selectedKey="{/CountryKey}"
                                    forceSelection="false">
                                <items>
                                    <core:Item key="{jsonCountries>Key}" 
                                                text="{jsonCountries>Text}"/>
                                </items>
                            </Select>
                            <Button id="btnFilter"
                                    class="sapUiSmallMarginEnd"
                                    icon="sap-icon://search"
                                    press="onFilter"/>
                            <Button id="btnClearFilter"
                                    class="sapUiSmallMarginEnd"
                                    icon="sap-icon://clear-filter"
                                    press="onClearFilter"/>
                        </HBox>
                        <HBox>
                            <Panel>
                                <content>
                                    <Button id="btnShowCity"
                                            text="{i18n>showCity}"
                                            visible="{jsonConfig>/visibleBtnShowCity}"
                                            press="onShowCity"/>
                                    <Button id="btnHIdeCity"
                                            text="{i18n>hideCity}"
                                            visible="{jsonConfig>/visibleBtnHideCity}"
                                            press="onHideCity"/>
                                    <Table id="tableEmployee"
                                            items="{jsonEmployees>/Employees}"
                                            headerText="Employees: ({jsonEmployees>/Amount})">
                                        <columns>
                                            <Column visible="{jsonConfig>/visibleID}">
                                                <Text text="{i18n>tableId}"/>
                                            </Column>
                                            <Column visible="{jsonConfig>/visibleName}">
                                                <Text text="{i18n>tableName}"/>
                                            </Column >
                                            <Column visible="{jsonConfig>/visibleCountry}">
                                                <Text text="{i18n>tableCountry}"/>
                                            </Column>
                                            <Column visible="{jsonConfig>/visibleCity}">
                                                <Text text="{i18n>tableCity}"/>
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem press="onMessage"
                                                            type="Active">
                                                <cells>
                                                    <ObjectIdentifier title="{jsonEmployees>EmployeeID}"/>
                                                    <Text text="{jsonEmployees>FirstName} {jsonEmployees>LastName}"/>
                                                    <Text text="{jsonEmployees>Country}"/>
                                                    <Text text="{jsonEmployees>City}"/>
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </content>
                            </Panel>
                        </HBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
